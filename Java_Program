			if(i==0||i==1)
			{
				continue;
			}
			int flag=0;
			for(int j=2;j<=i/2;j++)
			{
				if(i%j==0)
				{
					flag=1;
					break;						
				}			
			}
			if(flag==1)
			{
				System.out.println(i+" is not prime no");
			}
			if(flag==0)
			{
				System.out.println(i+" is prime");
			}	
		}
